PORT=3000
NODE_ENV=development

# SQLite Database (файл создается автоматически)
DB_PATH=./database.sqlite

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRE=7d

# Регистрация
REGISTRATION_FEE=1000

# Admin
ADMIN_EMAIL=admin@logistics.com
ADMIN_PASSWORD=admin123

# Firebase (для Google аутентификации)
# Получите эти данные в Firebase Console: https://console.firebase.google.com/
# Project Settings > Service Accounts > Generate New Private Key
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_CLIENT_EMAIL=your-firebase-client-email
FIREBASE_PRIVATE_KEY=your-firebase-private-key
# Или используйте путь к JSON файлу сервисного аккаунта:
# FIREBASE_SERVICE_ACCOUNT_PATH=./firebase-service-account.json

# SMTP для отправки email (OTP коды)
# Настройки для Zoho Mail
SMTP_HOST=smtp.zoho.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=noreply@shiply.kz
SMTP_PASS=your-smtp-password
SMTP_FROM=noreply@shiply.kz
